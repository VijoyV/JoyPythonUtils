{
  "csv_file": "input/questions.csv",
  "background_image": "input/background.jpg",
  "font_path": "fonts/calibri.ttf",
  "image_width": 1280,
  "image_height": 720,
  "output_dir": "output",
  "question": {
    "font_size": 36,
    "box": {
